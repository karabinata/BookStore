@model BookEditViewModel

@{
    ViewData["Title"] = "Редактирай книга";
}

<h2>@ViewData["Title"]</h2>

<div class="w3l_banner_nav_right">
    <h3>Редактиране на книга</h3>
    <div class="w3_login_module">
        <div class="module form-module">
            <div class="toggle">
                <i class="fa fa-times fa-pencil"></i>
                <div class="tooltip">Click Me</div>
            </div>
            <div class="form">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Book.BooksAvailable"></label>
                        <input asp-for="Book.BooksAvailable" />
                        <span asp-validation-for="Book.BooksAvailable" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.Title"></label>
                        <input asp-for="Book.Title" class="form-control" />
                        <span asp-validation-for="Book.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.AuthorNames"></label>
                        <input asp-for="Book.AuthorNames" class="form-control" />
                        <span asp-validation-for="Book.AuthorNames" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublisherName"></label>
                        <input asp-for="PublisherName" class="form-control" />
                        <span asp-validation-for="PublisherName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.Category"></label>
                        <input asp-for="Book.Category" class="form-control" />
                        <span asp-validation-for="Book.Category" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PublicationYear"></label>
                        <input asp-for="PublicationYear" class="form-control" />
                        <span asp-validation-for="PublicationYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ISBN"></label>
                        <input asp-for="ISBN" class="form-control" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IsNew"></label>
                        <input asp-for="IsNew" />
                        <span asp-validation-for="IsNew" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Book.Price"></label>
                        <input asp-for="Book.Price" class="form-control" />
                        <span asp-validation-for="Book.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.Condition"></label>
                        <input asp-for="Book.Condition" class="form-control" />
                        <span asp-validation-for="Book.Condition" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.ConditionNote"></label>
                        <input asp-for="Book.ConditionNote" class="form-control" />
                        <span asp-validation-for="Book.ConditionNote" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.Language"></label>
                        <input asp-for="Book.Language" class="form-control" />
                        <span asp-validation-for="Book.Language" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Subtitle"></label>
                        <input asp-for="Subtitle" class="form-control" />
                        <span asp-validation-for="Subtitle" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SeriesAndLibraries"></label>
                        <input asp-for="SeriesAndLibraries" class="form-control" />
                        <span asp-validation-for="SeriesAndLibraries" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TranslatorName"></label>
                        <input asp-for="TranslatorName" class="form-control" />
                        <span asp-validation-for="TranslatorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PaintorName"></label>
                        <input asp-for="PaintorName" class="form-control" />
                        <span asp-validation-for="PaintorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.CoverPicture"></label>
                        <input type="file" asp-for="Book.CoverPicture" name="coverPicture" style="display: none" accept=".gif,.png,.jpg" />
                        <button type="button" class="btn btn-default form-control" onclick="document.getElementsByName('coverPicture')[0].click()">Избери снимка за качване</button>
                        Файлът трябва да е gif, jpg или png, с обем до 50KB.
                        <span asp-validation-for="Book.CoverPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstPicture"></label>
                        <input type="file" asp-for="FirstPicture" />Файлът трябва да е gif, jpg или png, с обем до 50KB.
                        <span asp-validation-for="FirstPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SecondPicture"></label>
                        <input type="file" asp-for="SecondPicture" />Файлът трябва да е gif, jpg или png, с обем до 50KB.
                        <span asp-validation-for="SecondPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ThirdPicture"></label>
                        <input type="file" asp-for="ThirdPicture" />Файлът трябва да е .gif, .jpg или .png, с обем до 2MB.
                        <span asp-validation-for="ThirdPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book.Coverage"></label>
                        <input asp-for="Book.Coverage" class="form-control" />
                        <span asp-validation-for="Book.Coverage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="KeyWords"></label>
                        <input asp-for="KeyWords" class="form-control" />
                        <span asp-validation-for="KeyWords" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Format"></label>
                        <input asp-for="Format" class="form-control" />
                        <span asp-validation-for="Format" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Width"></label>
                        <input asp-for="Width" class="form-control" />
                        <span asp-validation-for="Width" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Heigth"></label>
                        <input asp-for="Heigth" class="form-control" />
                        <span asp-validation-for="Heigth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Тhickness"></label>
                        <input asp-for="Тhickness" class="form-control" />
                        <span asp-validation-for="Тhickness" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Weigth"></label>
                        <input asp-for="Weigth" class="form-control" />
                        <span asp-validation-for="Weigth" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Information"></label>
                        <input asp-for="Information" class="form-control" />
                        <span asp-validation-for="Information" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NotesForTraider"></label>
                        <input asp-for="NotesForTraider" class="form-control" />
                        <span asp-validation-for="NotesForTraider" class="text-danger"></span>
                    </div>
                    <input type="submit" value="Редактирай" />
                </form>
            </div>
            <div class="form">
                <h2>Create an account</h2>
                <form action="#" method="post">
                    <input type="text" name="Username" placeholder="Username" required=" ">
                    <input type="password" name="Password" placeholder="Password" required=" ">
                    <input type="email" name="Email" placeholder="Email Address" required=" ">
                    <input type="text" name="Phone" placeholder="Phone Number" required=" ">
                    <input type="submit" value="Register">
                </form>
            </div>
        </div>
    </div>

</div>
<div class="clearfix"></div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $('.toggle').click(function () {
            // Switches the Icon
            $(this).children('i').toggleClass('fa-pencil');
            // Switches the forms
            $('.form').animate({
                height: "toggle",
                'padding-top': 'toggle',
                'padding-bottom': 'toggle',
                opacity: "toggle"
            }, "slow");
        });
    </script>
}




