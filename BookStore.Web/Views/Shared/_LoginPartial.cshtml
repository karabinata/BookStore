@using Microsoft.AspNetCore.Identity
@using BookStore.Web.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                @{ 
                    var username = UserManager.GetUserName(User);
                }
                <a asp-area="" asp-controller="Users" asp-action="Profile" asp-route-username="@username" title="Manage" class="whiteA greeting">Здравейте, @username!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-danger navbar-btn navbar-link whiteA">Изход</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="whiteA">Регистрация</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="whiteA">Вход</a></li>
    </ul>
}
