    <script>
        $(document).ready(function () {

            $('.divAddCart').on('click', function () {
                var getItemId = parseInt(document.getElementById('item-id').value);
                var getUserName = $('.divName').html();
                $.ajax({
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    url: '/shoppingcard/addtocart/' + getItemId,
                    data: getItemId,
                    success: function (data) {
                        $('#spnCart').html(data)
                    },
                    error: function (data) {
                        alert(getItemId);
                    }
                });
            });

            $('#spnCart').on('click', function () {
                var getName = $('.divName').html();
                $.ajax({
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    url: '/Home/GetCartItems',

                    success: function (data) {
                        $('#exampleModal').html(data);
                        $('#exampleModal').modal({
                            backdrop: false
                        });
                    },
                    error: function (data) {
                        alert(data);
                    }
                });
            });

            $(document).delegate('.cartDel', 'click', function () {
                var DeleteItem = parseInt($(this).closest('tr').prop('id'));
                $.ajax({
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    url: '/Home/DeleteCart',
                    data: "{ 'itemId':' " + DeleteItem + "' }",
                    success: function (data) {
                        $('#exampleModal').html(data);
                        $('#spnCart').html($(data).find('#cartList tbody tr').length);
                        $('#exampleModal').modal({
                            backdrop: false
                        });
                    },
                    error: function (data) {
                        alert(data);
                    }
                });
            });
        });
